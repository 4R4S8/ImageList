@using ImageList.ViewModels
@model ViewModel
@{
    ViewData["Title"] = "Index";
}
<heads>
    <div class="container p-3">
</div>
</heads>
  <body>
    <div class="container p-3">
      <div class="row">
        <div class="col">
          <ul class="list-group-item-primary">
              
                        @foreach (var obj in Model.ImageListCollection)
                        {
                            <li data="@obj.GUID"><a href="/ImageView/Index/@obj.GUID">@obj.Name</a></li>
                            if (obj.Extension == "")
                            {
                                <ul>
                                    <li data="@obj.GUID"><a>@obj.Name</a></li>
                                </ul>
                            }
                        }
                    
              
          </ul>
        </div>
        <div class="form-group border col">
            @{
                    if (Model.ImageViewCollection!=null)
                    {
                        <img
                         src="data:image/*;Base64,@Convert.ToBase64String(Model.ImageViewCollection)" alt="Image"
                         class="img-fluid rounded float-right"
                         style="display: block" />
                    }
                    else
                    {
                            
                    }
            }
          
      @*    <canvas
            style="
              display: block;
              margin: 1em auto;
              background: #fff;
              border: 1px solid #ccc;
            "
            class="rounded"
          ></canvas>*@
        </div>
      </div>
    </div>
    <a asp-controller="ImageView" asp-action="Add" class="btn btn-primary">Add Image</a>
    <script src="~/js/site.js"></script>
  </body>

